<h3>Listing tasks</h3>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Title</th>
    <th scope="col">Description</th>
    <th scope="col">Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

<% @tasks.each do |task| %>
    <tbody>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td></td>

    <td><div class="btn-group" role="group" aria-label="Basic example">
      <button type="button" class="btn btn-secondary"><%= link_to 'Show', task_path(task) %></button>
      <button type="button" class="btn btn-secondary"><%= link_to 'Edit', edit_task_path(task) %></button>
      <button type="button" class="btn btn-secondary"><%= link_to 'Destroy', task_path(task),
                                          method: :delete,
                                                                    data: { confirm: 'Are you sure?' } %></button>
    </div></td>
  </tr>
<% end %>
  </tbody>
</table>
<div class="btn-group" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-secondary"> <%= link_to 'New task', new_task_path %></button>
  <button type="button" class="btn btn-secondary"> <%= link_to 'Back', projects_path %></button>
</div>
